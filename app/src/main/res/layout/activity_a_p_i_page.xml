<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="match_parent" android:layout_weight="2"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_g"
    xmlns:android="http://schemas.android.com/apk/res/android" >
<LinearLayout android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:orientation="vertical"
    android:background="@drawable/background_g"
    android:padding="16dp"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/oranda"
        android:layout_marginBottom="96dp"></ImageView>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/city_et"
        android:hint="  Enter City Name"
        android:textColorHint="@color/gray_light"
        android:fontFamily="sans-serif-condensed-medium"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:background="@drawable/round_btn"
        android:textColor="#0f4c75"></EditText>

    <TextView
        android:id="@+id/wind_view_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_eidttxt"
        android:visibility="gone"
        android:textColor="#F6F5F5"
        android:gravity="center"
        android:layout_marginTop="350dp"></TextView>
    <Button
        android:id="@+id/wind_btn"
        android:text="  show wind direction  "
        android:layout_marginTop="132dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round_btn"
        android:layout_gravity="center"
        android:fontFamily="sans-serif-condensed-medium"
        android:textColor="#46B5D1"
        ></Button>
</LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="@string/CopyRight"
        android:layout_gravity="center"
        android:fontFamily="sans-serif-condensed-medium"
        android:textAppearance="@style/TextAppearance.AppCompat.Small.Inverse"
        android:gravity="center"></TextView>
</LinearLayout>