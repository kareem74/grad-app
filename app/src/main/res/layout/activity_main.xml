<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/background_g"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="0dp"
        android:layout_weight="0"
        android:src="@drawable/oranda"></ImageView>

    <GridLayout
        android:layout_width="363dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:columnCount="2"
        android:layout_marginTop="80dp"
        android:rowCount="2">


        <ImageButton
            android:id="@+id/live_icon"
            android:layout_width="154dp"
            android:layout_height="213dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@color/labani"
            android:src="@drawable/livemonitor"></ImageButton>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
           >

            <ImageButton
                android:id="@+id/help_icon"
                android:layout_width="139dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@color/labani"
                android:src="@drawable/help_k"></ImageButton>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="121dp"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
           >

            <ImageButton
                android:id="@+id/setting_icon"
                android:layout_width="136dp"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:background="@color/labani"
                android:src="@drawable/setting"></ImageButton>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
           >

            <ImageButton
                android:id="@+id/logout_icon"
                android:layout_width="134dp"
                android:layout_height="162dp"
                android:layout_centerInParent="true"
                android:background="@color/labani"
                android:src="@drawable/logoutphoto"></ImageButton>


        </RelativeLayout>
    </GridLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="@string/CopyRight"
        android:layout_gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Small.Inverse"
        android:gravity="center"></TextView>
</LinearLayout>