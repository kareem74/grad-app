<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="32dp"
    android:background="@color/background_color"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1">

    <ImageView
        android:layout_width="351dp"
        android:layout_height="match_parent"
        android:contentDescription="@string/pro"
        android:src="@drawable/icons"></ImageView>
</RelativeLayout>

    <GridLayout
        android:layout_width="309dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="6"
        android:columnCount="2"
        android:rowCount="2">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_marginTop="96dp"
            android:background="@color/background_color">

            <ImageButton
                android:id="@+id/live_icon"
                android:layout_width="144dp"
                android:layout_height="144dp"
                android:layout_centerInParent="true"
                android:background="@color/background_color"
                android:src="@drawable/live132"></ImageButton>

            <TextView
                android:id="@+id/live_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/live_icon"
                android:layout_centerInParent="true"
                android:text="@string/LiveMonitor"
                android:textAppearance="@style/TextAppearance.AppCompat.Small.Inverse"
                android:textColor="#ff6123"></TextView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_marginTop="96dp">

            <ImageButton
                android:id="@+id/history_icon"
                android:layout_width="144dp"
                android:layout_height="144dp"
                android:layout_centerInParent="true"
                android:background="@color/background_color"
                android:src="@drawable/history"></ImageButton>

            <TextView
                android:id="@+id/history_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/history_icon"
                android:layout_centerInParent="true"
                android:text="@string/History"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium.Inverse"
                android:textColor="#ff6123"></TextView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_marginBottom="96dp">

            <ImageButton
                android:id="@+id/setting_icon"
                android:layout_width="144dp"
                android:layout_height="144dp"
                android:layout_centerInParent="true"
                android:background="@color/background_color"
                android:src="@drawable/settings"></ImageButton>

            <TextView
                android:id="@+id/setting_txt"
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/setting_icon"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:shadowColor="#ffffff"
                android:text="@string/Setting"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium.Inverse"
                android:textColor="#ff6123"></TextView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_marginBottom="96dp">

            <ImageButton
                android:id="@+id/logout_icon"
                android:layout_width="144dp"
                android:layout_height="144dp"
                android:layout_centerInParent="true"
                android:background="@color/background_color"
                android:src="@drawable/logout"></ImageButton>

            <TextView
                android:id="@+id/logout_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/logout_icon"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="@string/LogOut"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium.Inverse"
                android:textColor="#ff6123"></TextView>
        </RelativeLayout>
    </GridLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/light_color"
        android:text="@string/CopyRight"
        android:gravity="center"></TextView>
</LinearLayout>